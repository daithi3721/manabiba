<% now = Time.zone.now %>

<div class="page-header">
    <h1>解説授業作成</h1>
</div>

<div class="row">
 <div class="col-md-6 col-md-offset-3">
        <%= form_for(@lesson) do |f| %>
          <% if @lesson.errors.any? %>
            <div class="alert alert-danger">
              <ul>
                <%= @lesson.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          
          <%= f.label :name, "授業タイトル" %>
          <%= f.text_field :name, class: 'form-control' %>
           
          <% if @lesson.lesson_image? %>
              <%= image_tag @lesson.lesson_image.url %>
          <% end %>
          <%= f.file_field :lesson_image, class: 'form-control' %>
          <%= f.hidden_field :lesson_image_cache %>
          
          <%= f.label :teacher, "講師名" %>
          <%= f.text_field :teacher, class: 'form-control' %>
          
          <%= f.label :description, "説明文" %>
          <%= f.text_area :description, class: 'form-control', row: 10 %>
          
          <%= f.label :movie_url, "Youtube動画コード" %>   ※埋め込みたい動画URLの=以降のアルファベットをペースト
          <%= f.text_field :movie_url, class: 'form-control' %>
 　        
 　        <%= f.submit '作成', class: 'btn btn-primary', data: { disable_with: '作成中・・・'} %>
 　        
        <% end %>
 </div>
</div>