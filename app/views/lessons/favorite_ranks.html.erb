<div class="page-header">
  <h1>解説授業一覧</h1>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= search_form_for(@q, method: :get) do |f| %>
      <div class="input-group">
      <%= f.text_field :name_or_description_cont, class: "form-control", placeholder: "キーワードで検索" %>
          <span class="input-group-btn">
            <button class="btn btn-default" type="submit">
              <i class='glyphicon glyphicon-search'></i>
            </button>
          </span>
      </div>
    <% end %>
    <div class="btn-toolbar" role="toolbar" style="margin: 0;">
      <div class="btn-group">
        <%= paginate @lessons %>
      </div>
      <div class="btn-group pull-right" style="margin-top: 20px;">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
          人気順 <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to '新着順', lessons_path %></li>
          <li><%= link_to '人気順', favorite_ranks_path %></li>
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="container">
    <div class="col-md-12"> 
      <div class="panel">
        <div class="panel-body">
          <!--/stories-->
        <% @favorite_lessons.each_with_index do |(lesson, count), rank| %>
		      <div class="row">    
            <div class="col-md-2 col-sm-3 text-center">
              <%= image_tag lesson.lesson_image, :class => "img-circle", :width => "100", :height => "100" %>
            </div>
            <div class="col-md-10 col-sm-9">
              <h3><%= lesson.name %></h3><br>
              <div class="row">
                <div class="col-xs-12">
                  <p><%= lesson.description %></p>
                  <p class="lead"><%= button_to "授業を見る", lesson, :class => "btn btn-primary", :method => :get %></p><br>
                  <ul class="list-inline">
                    <li><%= lesson.created_at.strftime('%Y/%m/%d')%></li>
                    <li><i class="glyphicon glyphicon-comment"></i><%= lesson.teacher %></li>
                    <li>
                      <% if current_user != @user %>
                          <div class="favorite_form_container_<%= lesson.id %>">
                            <% if current_user.favoriting?(lesson) %>
                              <%= render 'users/unfavorite', lesson: lesson %>
                            <% else %>
                              <%= render 'users/favorite', lesson: lesson %>
                            <% end %>
                          </div>
                      <% end %>
                    </li>
                  </ul>
                </div>
                <div class="col-xs-3"></div>
              </div>
            </div>
          </div>
          <hr>
        <% end %>
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <%= paginate @lessons %>
          </div>
        </div>
      </div>
    </div>