<% now = Time.zone.now %>

<div class="page-header">
    <h1>解説授業作成</h1>
</div>

<div class="row">
 <div class="col-md-6 col-md-offset-3">
    <%= form_for(@lesson, class: 'form-horizontal', role: 'form') do |f| %>
      <% if @lesson.errors.any? %>
        <div class="alert alert-danger">
            <ul>
            <%= @lesson.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
        </div>
      <% end %>
      
      <%= f.label :name, "解説動画タイトル" %>
      <%= f.text_field :name, class: 'form-control' %>
      
      <% if @lesson.lesson_image? %>
        <div class="thumbnail">
          <%= image_tag @lesson.lesson_image.url %>
        </div>
      <% end %>
      <%= f.file_field :lesson_image, class: 'form-control' %>
      <%= f.hidden_field :lesson_image_cache %>
    
      <%= f.label :teacher, "講師名" %>
      <%= f.text_field :teacher, class: 'form-control' %>
     
      <%= f.label :description, "説明文" %>
      <%= f.text_area :description, class: 'form-control', row: 10 %>
     
      <%= f.label :movie_url, "埋め込み動画URL" %> ※埋め込みたい動画URLの=以降のアルファベットをペースト
      <%= f.text_field :movie_url, class: 'form-control' %>
    
      <%= f.submit '編集する', class: 'btn btn-primary', data: { disable_with: '編集中・・・'} %>
    <% end %>
  </div>
</div>  