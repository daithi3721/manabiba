<div class="page-header">
  <h3 style="text-align: center">イベント一覧</h3>
</div>

<div class="container">
  <div class="col-md-12 col-xs-12"> 
    <div class="panel">
      <div class="panel-body">
        <% @events.each do |event| %>
		  <div class="row">    
            <div class="col-md-2 col-sm-3">
              <%= image_tag event.event_image, :class => "img-circle", :width => "100", :height => "100" %>
            </div><br>
            <div class="col-md-10 col-sm-9 col-xs-12">
              <h3><%= event.name %></h3>
              <div class="row">
                <div class="col-md-10">
                  <p class="hidden-xs"><%= event.content %></p>
                  <p class="lead"><%= button_to "イベントの詳細を見る", event, :class => "btn btn-primary", :method => :get %></p><br>
                  <ul class="list-inline">
                    <li><%= event.start_time.strftime('%Y/%m/%d %H:%M')%> - <%= event.end_time.strftime('%H:%M') %></li>
                    <li><i class="glyphicon glyphicon-user"></i><%= event.teacher %></li>
                  </ul>
                </div>
                <div class="col-xs-12"></div>
              </div>
            </div>
          </div>
          <hr>
        <% end %>
      </div>
    </div>

 