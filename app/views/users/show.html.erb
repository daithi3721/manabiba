<div class="page-header align: center">
    <h3>
        <%= @user.name %>さんのWEB質問予約状況
    </h3>
</div>
　　　　<% if @user.reservations.present? %>
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover  scrollclass">
              <thead>
                <tr>
                  <th>予約日</th>
                  <th>予約時間</th>
                  <th>科目</th>
                  <th>予約詳細</th>
                </tr>
              </thead>
              <% @reservations.each do |reservation| %>
              <tbody>
                <tr>
                  <td><%= reservation.reception_date %></td>
                  <td><%= reservation.recept %></td>
                  <td><%= reservation.subject %></td>
                  <td><%= link_to "詳細", reservation %></td>
                </tr>
              </tbody>
              <% end %>
            </table>
          </div>
        <% else %>
          <p>予約情報は今のところありません。<p>
        <% end %>





