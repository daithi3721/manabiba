<h1>基礎講座作成</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@basis_lesson) do |f| %>
        
          <%= render 'shared/error_messages', object: f.object %>
          
          <%= f.label :subject, "講座名" %>
          <% options = ["たった6時間で古典文法をマスターする方法", "７日間 英文法 基礎完成講座", "７日間 英文読解 基礎完成講座", "基礎現代文", "基礎数学1A", "基礎数学2B", "基礎数学3", "基礎物理", "基礎化学"] %>
          <%= f.select :subject, options, class: 'form-control' %><br><br>
          
          <%= f.label :number, "講座番号" %>
          <%= f.number_field :number, class: 'form-control' %>
          
          <%= f.label :name, "講義タイトル" %>
          <%= f.text_field :name, class: 'form-control' %>
         
          <%= f.label :teacher, "講師名" %>
          <% options = ["長祥史", "高間大輔", "八澤龍之介", "山本健太", "山城大樹", "吉田光輝"] %>
          <%= f.select :teacher, options, class: 'form-control' %><br><br>
          
          <%= f.label :movie_url, "動画URL" %> ※埋め込みたい動画URLの=以降のアルファベットをペースト
          <%= f.text_field :movie_url, class: 'form-control' %>
          
          <%= f.label :school, "提供元" %>
          <% options = ["マナビズム", "カンヨビ"] %>
          <%= f.select :school, options, class: 'form-control' %>
          
           <%= f.submit "基礎授業作成", class: "btn btn-large btn-primary" %>
          
        <% end %>
          
    </div>
</div>